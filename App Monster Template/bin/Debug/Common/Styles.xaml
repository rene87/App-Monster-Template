<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        
    <FontFamily x:Key="HeadlineFontFamily">./Assets/Fonts/FreckleFace-Regular.ttf#Freckle Face</FontFamily>

    <Style x:Key="CardText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="white" />
        <Setter Property="Margin" Value="5,5,5,5"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="CardTitle" TargetType="TextBlock"  BasedOn="{StaticResource CardText}">
        <Setter Property="FontFamily" Value="./Assets/Fonts/FreckleFace-Regular.ttf#Freckle Face" />
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

</ResourceDictionary>

